[ "$(command -v checkpsr)" ] || alias checkpsr="php-cs-fixer fix --config-file .php_cs --diff --dry-run"
[ "$(command -v   fixpsr)" ] || alias   fixpsr="php-cs-fixer fix --config-file .php_cs --diff"

case "$HOSTNAME" in
    alex*.local)  # Mac
        alias atd="open http://atd.v.com/master"

        # Initialize virtualenvwrapper
        export PROJECT_HOME=$HOME/projects
        # shellcheck disable=SC1091
        source /usr/local/bin/virtualenvwrapper.sh
        ;;
    *)
        echo "Not on a development machine, so we're not setting a \$PROJECT_DIR or initializing virtualenvwrapper."
        ;;
esac

alias vhvu="cdmaster; vagrant halt && vagrant up"

alias monitor-release='tail -f $(ls -td /home/servicemonkey/release_logs/20* | head -1)/*'

export PATH=$PATH:/Volumes/illuminate.local/scripts/mac/bin
