[ `command -v checkpsr` ] || alias checkpsr="php-cs-fixer fix --config-file .php_cs --diff --dry-run"
[ `command -v   fixpsr` ] || alias   fixpsr="php-cs-fixer fix --config-file .php_cs --diff"

case "$HOSTNAME" in
    alex.local)  # Mac
        export PROJECT_DIR="/Volumes/server-local/Illuminate/dev-vagrant/illuminate/codebase/allthedata/master"
        export CONFIG_DIR="/Volumes/server-local/Illuminate/dev-vagrant/illuminate/codebase/allthedata-configs"
        alias cdc="cd $CONFIG_DIR"
        ;;
    default.v.local)  # Vagrant
        export PROJECT_DIR="/vagrant/illuminate/codebase/allthedata/master"
        ;;
    *)
        echo "Not on a development machine, so we're not setting a \$PROJECT_DIR."
        ;;
esac

alias cdmaster="cd $PROJECT_DIR"
alias cdm="cd $PROJECT_DIR"

alias vhvu="cdmaster; vagrant halt && vagrant up"

alias monitor-release='tail -f $(ls -td /home/servicemonkey/release_logs/20* | head -1)/*'

export PATH=$PATH:/Volumes/server-local/Illuminate/dev-vagrant/scripts/mac/bin

